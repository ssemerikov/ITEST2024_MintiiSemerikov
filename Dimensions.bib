 title = {RESEARCH TRENDS AND ISSUES OF EDUCATION FOR SUSTAINABLE DEVELOPMENT-RELATED RESEARCH IN SOUTH KOREA},
 opturl = {https://app.dimensions.ai/details/publication/pub.1116320514},
