 doi = {10.25146/1995-0861-2020-54-4-241},
 journal = {Bulletin of Krasnoyarsk State Pedagogical University named after V.P. Astafiev},
 keywords = {},
 optnote = {http://vestnik.kspu.ru/index.php/vestnik/article/download/331/287},
 number = {4},
