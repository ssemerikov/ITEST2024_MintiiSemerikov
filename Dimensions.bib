 number = {12},
 pages = {1234},
 title = {{New Possibilities of Artificial Intelligence-Assisted Language Learning (AIALL): Comparing Visions from the East and the West}},
 opturl = {https://app.dimensions.ai/details/publication/pub.1166959560},
 volume = {13},
 year = {2023}
}

