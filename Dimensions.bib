 doi = {10.13128/formare-23188},
 journal = {Form@re - Open Journal per la formazione in rete},
 keywords = {},
 optnote = {http://dx.doi.org/10.13128/formare-23188},
 number = {2},
 pages = {130-139},
 title = {Videorecording in classroom: the reflective practitioner in the mirror},
 opturl = {https://app.dimensions.ai/details/publication/pub.1107042544},
 volume = {18},
 year = {2018}
}

