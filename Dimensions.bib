 number = {11 الجزء الأول},
 pages = {389-422},
 title = {الکفایات التعلیمیة لمعلمات التربیة الخاصة المرحلة الابتدائیة للبنات فی برامج الدمج بالمدارس الحکومیة والأهلیة بمدینة الریاض (دراسة مقارنة ) The Educational Competencies of Special Education Teachers in Mainstreaming Programs at both Government and Private Primary Girls Schools in Riyadh City},
 opturl = {https://app.dimensions.ai/details/publication/pub.1128209117},
 volume = {3},
 year = {2016}
}

