 number = {},
 pages = {105-120},
 title = {The Impact of Preservice and New Teachers’ Involvement in Simulation Workshop and Their Perceptions about the Concept of Conflict in Education},
 opturl = {https://app.dimensions.ai/details/publication/pub.1118004185},
 volume = {15},
 year = {2019}
}

