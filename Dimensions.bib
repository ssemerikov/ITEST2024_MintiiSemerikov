 title = {THE REALITY OF PRACTICAL TRAINING PROGRAMS FOR TEACHERS IN LIGHT OF TECHNOLOGICAL DEVELOPMENT AND CONTINUOUS MODERN INNOVATIONS: CHALLENGES AND OPPORTUNITIES},
 opturl = {https://app.dimensions.ai/details/publication/pub.1164713124},
 volume = {33},
