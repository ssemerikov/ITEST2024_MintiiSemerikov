 doi = {10.1177/2150132719862163},
 journal = {Journal of Primary Care & Community Health},
 keywords = {},
 optnote = {https://journals.sagepub.com/doi/pdf/10.1177/2150132719862163},
 number = {},
 pages = {2150132719862163},
 title = {A Pilot Assessment of Primary Care Providers’ Knowledge of Adrenal Insufficiency Diagnosis and Management},
 opturl = {https://app.dimensions.ai/details/publication/pub.1118020902},
 volume = {10},
 year = {2019}
}

